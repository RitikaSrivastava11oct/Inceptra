<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_informal_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.firebase.InformalEvent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <Button
            android:id="@+id/event1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="kritsvilla"
            android:textSize="30dp" />

        <Button
            android:id="@+id/event2"
            android:layout_below="@+id/event1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="tambola"
            android:textSize="30dp" />

        <Button
            android:id="@+id/event3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/event2"
            android:text="rampage"
            android:textSize="30dp" />

        <Button
            android:id="@+id/event4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/event3"
            android:padding="30dp"
            android:text="dedications"
            android:textSize="30dp" />
        <Button
            android:id="@+id/event5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/event3"
            android:padding="30dp"
            android:text="fun games "
            android:textSize="30dp" />
        <Button
            android:id="@+id/event6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/event3"
            android:padding="30dp"
            android:text="scavenger hunt "
            android:textSize="30dp" />
    </LinearLayout>


</RelativeLayout>
